        <div class="form-group">
          {{ form_label(form.heure) }}
          {{ form_widget(form.heure, {'attr': {'class':'form-control'}}) }}
          {{ form_errors(form.heure) }}
        </div>

        <div class="text-center">
      <input id="envoyer" type="submit" value="Envoyer" />
        </div>

        {{ form_end(form) }}




        </div>

      </div>
    </div>
  </div>
</section>

{% endblock %}

